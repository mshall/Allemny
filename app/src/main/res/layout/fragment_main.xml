<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/separator"
        android:background="@color/colorPrimary">


        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/fadingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            app:texts="@array/welcome_words"
            app:timeout="2500" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TableRow>

            <android.support.v7.widget.CardView
                android:id="@+id/cvFragmentMainAddNewPlan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_add_box_blue_grey_400_24dp" />

                    <phelat.TextView.Plus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/add_new_plan"
                        android:textSize="20sp"
                        app:font="streatwear.otf" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_keyboard_arrow_right_teal_24dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cvFragmentMainMyPlans"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_view_module_blue_grey_400_24dp" />

                    <phelat.TextView.Plus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/view_my_plans"
                        android:textSize="20sp"
                        app:font="streatwear.otf" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_keyboard_arrow_right_teal_24dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cvFragmentMainUpdateMyWeight"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_border_color_blue_grey_400_24dp" />

                    <phelat.TextView.Plus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/update_my_weight"
                        android:textSize="20sp"
                        app:font="streatwear.otf" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_keyboard_arrow_right_teal_24dp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cvFragmentMainMyWeightProgress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_pageview_blue_grey_400_24dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_keyboard_arrow_right_teal_24dp" />

                    <phelat.TextView.Plus
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/my_weight_progress"
                        android:textSize="20sp"
                        app:font="streatwear.otf" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </TableRow>
    </TableLayout>
</RelativeLayout>
